<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="1dp"
    android:fillViewport="false"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        tools:context=".MainActivity"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="12sp"
            />
        <CheckBox
            android:id="@+id/checkbox_debug_mode"
            android:text="@string/debug_mode"
            android:minHeight="32dp"
            android:padding="0dp"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:checked="false"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="12sp"
            />
        <TableRow>
            <TextView
                android:id="@+id/textview_text1"
                android:text="@string/voice_language"
                android:gravity="start"
                android:textSize="16sp"
                android:textAlignment="gravity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                />

            <Spinner
                android:id="@+id/spinner_src_languages"
                android:contentDescription="@string/spinner_src_languages"
                android:spinnerMode="dropdown"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="start"
                android:textAlignment="gravity"
                android:minHeight="40dp"
                android:layout_marginStart="12dp"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TextView
            android:id="@+id/textview_src_dialect"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/textview_src"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="12sp"
            />
        <CheckBox
            android:id="@+id/checkbox_offline_mode"
            android:text="@string/use_offline_mode"
            android:gravity="start"
            android:layout_gravity="start"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="12sp"
            />
        <EditText
            android:id="@+id/voice_text"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background"
            android:gravity="start"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:hint="@string/recognized_words"
            android:maxLines="3"
            android:textSize="18sp"
            android:textAlignment="gravity"
            android:textColorHint="#616161"
            tools:ignore="LabelFor,TextFields"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="12sp"
            />
        <TableRow>
            <TextView
                android:id="@+id/textview_text2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="start"
                android:text="@string/translation_language"
                android:textAlignment="gravity"
                android:textSize="16sp"
                />

            <Spinner
                android:id="@+id/spinner_dst_languages"
                android:contentDescription="@string/spinner_dst_languages"
                android:spinnerMode="dropdown"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="start"
                android:textAlignment="gravity"
                android:minHeight="40dp"
                android:layout_marginStart="12dp"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TextView
            android:id="@+id/textview_dst_dialect"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/textview_dst"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="12sp"
            />
        <Button
            android:id="@+id/button_toggle_overlay"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/toggle_overlay"
            android:textSize="14sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="12sp"
            />
        <TextView
            android:id="@+id/textview_recognizing"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/textview_overlaying"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/textview_debug"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/textview_output_messages"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/textview_mlkit_status"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </TableLayout>
</ScrollView>
